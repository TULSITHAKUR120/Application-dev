@page "/calendar"
@page "/calendar/{Year:int}/{Month:int}"
@using DailyJournal.Services
@using DailyJournal.Data.Entities
@inject CalendarService CalendarService

<div class="calendar-page">
    <!-- Header -->
    <div class="calendar-header">
        <div class="header-left">
            <h1 class="page-title">Calendar View</h1>
            <p class="page-subtitle">Navigate through your journal entries</p>
        </div>
        <div class="header-right">
            <a class="btn-new-entry" href="/journal/@DateTime.Today.ToString("yyyy-MM-dd")">
                <i class="bi bi-plus-circle"></i> Today's Entry
            </a>
        </div>
    </div>

    <!-- Calendar Navigation -->
    <div class="calendar-navigation">
        <div class="nav-controls">
            <a class="nav-btn" href="/calendar/@PrevMonth.Year/@PrevMonth.Month">
                <i class="bi bi-chevron-left"></i>
            </a>

            <div class="current-month">
                <h2>@CurrentMonthName @Year</h2>
                @if (MonthStats != null)
                {
                    <div class="month-stats">
                        <span class="stat-item">
                            <i class="bi bi-journal-text"></i> @MonthStats.TotalEntries entries
                        </span>
                        @if (MonthStats.TotalEntries > 0)
                        {
                            <span class="stat-item positive">
                                <i class="bi bi-emoji-smile"></i> @MonthStats.PositiveDays days
                            </span>
                            <span class="stat-item neutral">
                                <i class="bi bi-emoji-neutral"></i> @MonthStats.NeutralDays days
                            </span>
                            <span class="stat-item negative">
                                <i class="bi bi-emoji-frown"></i> @MonthStats.NegativeDays days
                            </span>
                        }
                    </div>
                }
            </div>

            <a class="nav-btn" href="/calendar/@NextMonth.Year/@NextMonth.Month">
                <i class="bi bi-chevron-right"></i>
            </a>
        </div>
    </div>

    <!-- Calendar Grid -->
    <div class="calendar-container">
        <div class="weekdays">
            @foreach (var dayName in weekdays)
            {
                <div class="weekday">@dayName</div>
            }
        </div>

        <div class="calendar-grid">
            @if (DaysList != null)
            {
                @for (int i = 0; i < DaysList.Count; i++)
                {
                    var day = DaysList[i];
                    var isSelected = SelectedDate.HasValue && SelectedDate.Value.Date == day.Date.Date;
                    var journalUrl = $"/journal/{day.Date:yyyy-MM-dd}";

                    <div class="calendar-day @(day.IsCurrentMonth ? "" : "other-month")
                                                  @(day.IsToday ? "today" : "")
                                                  @(isSelected ? "selected" : "")"
                         data-date="@day.Date.ToString("yyyy-MM-dd")"
                         @onclick="() => HandleDayClick(day)">

                        <div class="day-header">
                            <span class="day-number">@day.Date.Day</span>
                            @if (day.IsToday)
                            {
                                <span class="today-badge">Today</span>
                            }
                        </div>

                        @if (day.HasEntry)
                        {
                            <div class="day-content">
                                <div class="mood-indicator" style="background-color: @GetMoodColor(day.PrimaryMood)"></div>
                                @if (day.IsFavorite)
                                {
                                    <i class="bi bi-star-fill favorite-star"></i>
                                }
                                @if (day.WordCount > 0)
                                {
                                    <div class="word-count">
                                        @day.WordCount
                                    </div>
                                }
                            </div>

                            <!-- Clickable overlay for entry days -->
                            <a class="day-link" href="@journalUrl"></a>
                        }
                        else if (day.IsCurrentMonth)
                        {
                            <div class="day-empty">
                                <a class="add-entry-btn" href="@journalUrl">
                                    <i class="bi bi-plus"></i>
                                </a>
                            </div>
                        }
                    </div>
                }
            }
        </div>
    </div>

    <!-- Selected Date Details -->
    @if (SelectedDate.HasValue)
    {
        <div class="selected-date-details">
            <h3>
                @SelectedDate.Value.ToString("dddd, MMMM dd, yyyy")
                @if (IsTodaySelected)
                {
                    <span class="today-label">TODAY</span>
                }
            </h3>

            @if (SelectedDateEntry != null)
            {
                <div class="entry-preview">
                    <div class="entry-header">
                        <h4>@SelectedDateEntry.Title</h4>
                        <div class="entry-actions">
                            <a class="icon-btn edit" href="/journal/@SelectedDate.Value.ToString("yyyy-MM-dd")">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a class="icon-btn view" href="/entry/@SelectedDateEntry.Id">
                                <i class="bi bi-eye"></i> View
                            </a>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(SelectedDateEntry.PrimaryMood))
                    {
                        <div class="entry-moods">
                            <span class="mood-tag primary" style="background-color: @GetMoodColor(SelectedDateEntry.PrimaryMood)">
                                @SelectedDateEntry.PrimaryMood
                            </span>
                        </div>
                    }

                    <p class="entry-content-preview">
                        @GetContentPreview(SelectedDateEntry.Content)
                    </p>

                    <div class="entry-stats">
                        <span class="stat">
                            <i class="bi bi-fonts"></i> @SelectedDateEntry.WordCount words
                        </span>
                        <span class="stat">
                            <i class="bi bi-clock"></i> @SelectedDateEntry.UpdatedAt.ToString("h:mm tt")
                        </span>
                    </div>
                </div>
            }
            else
            {
                <div class="no-entry">
                    <i class="bi bi-journal-x"></i>
                    <h4>No entry for this day</h4>
                    <p>This day is waiting for your story.</p>
                    <a class="btn-new-entry" href="/journal/@SelectedDate.Value.ToString("yyyy-MM-dd")">
                        <i class="bi bi-plus-circle"></i> Write Entry
                    </a>
                </div>
            }
        </div>
    }
</div>

@code {
    [Parameter] public int Year { get; set; }
    [Parameter] public int Month { get; set; }

    private List<CalendarService.CalendarDay> DaysList = new();
    private CalendarService.CalendarMonth MonthStats = new();
    private DateTime? SelectedDate = null;
    private JournalEntry? SelectedDateEntry = null;
    private bool IsLoading = true;

    private string[] weekdays = { "Sun", "Mon", "Tue", "Wed", "Thu", "Fri", "Sat" };
    private string CurrentMonthName => new DateTime(Year, Month, 1).ToString("MMMM");
    private bool IsTodaySelected => SelectedDate?.Date == DateTime.Today.Date;

    private DateTime PrevMonth => new DateTime(Year, Month, 1).AddMonths(-1);
    private DateTime NextMonth => new DateTime(Year, Month, 1).AddMonths(1);

    protected override async Task OnInitializedAsync()
    {
        if (Year == 0) Year = DateTime.Today.Year;
        if (Month == 0) Month = DateTime.Today.Month;

        await LoadData();
    }

    protected override async Task OnParametersSetAsync()
    {
        if (Year == 0 || Month == 0) return;
        await LoadData();
    }

    private async Task LoadData()
    {
        IsLoading = true;

        try
        {
            var userId = 1; // Replace with actual user ID

            // Load calendar data
            var calendarData = await CalendarService.GetCalendarMonthAsync(userId, Year, Month);
            DaysList = calendarData.Days;
            MonthStats = calendarData;

            // Initialize selected date
            if (!SelectedDate.HasValue ||
                SelectedDate.Value.Year != Year ||
                SelectedDate.Value.Month != Month)
            {
                SelectedDate = DateTime.Today;
                if (SelectedDate.Value.Year != Year || SelectedDate.Value.Month != Month)
                {
                    SelectedDate = new DateTime(Year, Month, 1);
                }
            }

            // Load selected date entry
            if (SelectedDate.HasValue)
            {
                SelectedDateEntry = await CalendarService.GetEntryByDateAsync(userId, SelectedDate.Value);
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading calendar: {ex.Message}");
        }
        finally
        {
            IsLoading = false;
            StateHasChanged();
        }
    }

    private async Task HandleDayClick(CalendarService.CalendarDay day)
    {
        // Update selected date locally (no navigation)
        SelectedDate = day.Date;

        var userId = 1; // Replace with actual user ID
        SelectedDateEntry = await CalendarService.GetEntryByDateAsync(userId, day.Date);

        StateHasChanged();
    }

    private string GetMoodColor(string? mood)
    {
        if (string.IsNullOrEmpty(mood)) return "#e2e8f0";

        var positiveMoods = new[] { "Happy", "Excited", "Grateful", "Content", "Proud", "Hopeful" };
        var negativeMoods = new[] { "Sad", "Angry", "Anxious", "Stressed", "Lonely", "Tired", "Frustrated" };

        if (positiveMoods.Contains(mood, StringComparer.OrdinalIgnoreCase))
            return "#10b981"; // Green

        if (negativeMoods.Contains(mood, StringComparer.OrdinalIgnoreCase))
            return "#ef4444"; // Red

        return "#f59e0b"; // Orange/Yellow for neutral
    }

    private string GetContentPreview(string? content)
    {
        if (string.IsNullOrEmpty(content))
            return "No content available";

        // Remove markdown and special characters
        var plainText = System.Text.RegularExpressions.Regex.Replace(content, @"[#*_`\[\]()]", "");

        // Return first 150 characters
        return plainText.Length > 150 ? plainText.Substring(0, 150) + "..." : plainText;
    }
}

